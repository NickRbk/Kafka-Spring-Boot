<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    
    <preConditions onFail="HALT">
        <dbms type="postgresql" />
    </preConditions>

    <changeSet id="1" author="Nick Rybak">
        <createTable tableName="INVALID_RESOURCES">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"
                             unique="true"
                             primaryKey="true"
                             primaryKeyName="invalid_resource_id" />
            </column>
            <column name="URL" type="VARCHAR(300)">
                <constraints nullable="false"
                             unique="true" />
            </column>
            <column name="ERROR_CODE" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ERROR_MSG" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>